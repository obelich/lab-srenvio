<%= form_with(model: shipment, local: true) do |form| %>
  <% if shipment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shipment.errors.count, "error") %> prohibited this shipment from being saved:</h2>

      <ul>
        <% shipment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <label>Transportista</label> <br />
    <%= form.collection_select :carrier_id, @carriers.order(:name),:id,:name,{ include_blank: true}, { class: 'form-control col-md-2'} %>

  </div>

  <div class="field">
    <%= form.label :tracking_number, 'NÃºmero de guia' %>
    <%= form.text_field :tracking_number, class: 'form-control col-md-2' %>
  </div>

  <div>

    <%= form.fields_for :parcel do |parcel_form| %>
      <div class="field">
        <%= parcel_form.label :length %>
        <%= parcel_form.number_field :length, class: 'form-control col-md-2' %>
      </div>

      <div class="field">
        <%= parcel_form.label :width %>
        <%= parcel_form.number_field :width, class: 'form-control col-md-2' %>
      </div>

      <div class="field">
        <%= parcel_form.label :height %>
        <%= parcel_form.number_field :height, class: 'form-control col-md-2' %>
      </div>

      <div class="field">
        <%= parcel_form.label :weight %>
        <%= parcel_form.number_field :weight, class: 'form-control col-md-2' %>
      </div>

      <div class="field">
        <%= parcel_form.label :distance_unit %>
        <%= parcel_form.text_field :distance_unit, class: 'form-control col-md-2' %>
      </div>

      <div class="field">
        <%= parcel_form.label :mass_unit %>
        <%= parcel_form.text_field :mass_unit, class: 'form-control col-md-2' %>
      </div>
    <% end %>

  </div>

  <div class="">
    <br />
    <br />
    <%= link_to 'Regresar', shipments_path, class: 'btn btn-secondary' %> <%= form.submit 'Generar envio', class: 'btn btn-primary' %>

  </div>
<% end %>
